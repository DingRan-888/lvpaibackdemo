    <link rel="stylesheet" href="/stylesheets/list.css" />
    <link rel="stylesheet" href="/stylesheets/table.css" />
    <link rel="stylesheet" href="/stylesheets/tipsy.css" />
    <style>
    main{
        padding: 10px 50px 50px;
    }
    section.list-title{
        margin-bottom: 20px;
        padding: 10px 0;
        border-bottom: 1px solid #ccc;
        height: 60px;
    }
    .l{
        float: left;
    }
    .r{
        float: right;
    }
    h3.l{
        margin-right: 20px;
    }
    th{
        text-align: center;
    }
    .table-bordered tbody tr td, .table-bordered tbody tr th{
        vertical-align: middle;
    }
    .maxwidth{
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        cursor: pointer;
    }
    .search{
        padding: 0 5px;
        border-radius: 4px;
        border: 1px solid #ccc;
        height: 30px;
    }
    </style>
</head>

<body class="HolyGrail">
    <% include header %>
    <div class="HolyGrail-body">
        <% include sidebar %>
        <main class="HolyGrail-content">
            <div id="hash-page">
                <section class="list-title">
                    <h3 class="l">商品列表</h3>
                   
                    <!--==========================================-->
                    <!-- <input type="text" name="search" class="search" placeholder="请输入商品名称"> 
                    <button id="search" class="btn btn-info">查询</button> -->
                    <!--==========================================-->

                    <a href="/productsadd" class="btn btn-info r">新增</a>
                </section>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>商品名称</th>
                                <th>价格</th>
                                <th>商品描述</th>
                                <th>发布时间</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(var i=0;i<list.length; i++){%>
                                <tr>
                                    <th scope="row"><%= i+1%></th>
                                    <td class="maxwidth"><a href="/productsdetail?id=<%= list[i]._id%>" title='<%= list[i].productsname%>'><%= list[i].productsname%></a></td>
                                    <td><%= list[i].productsprice%></td>
                                    <td class="maxwidth" title='<%= list[i].productscontent%>'><%= list[i].productscontent%></td>
                                    <td><%= handleMyDate(list[i].createTime)%></td>
                                    <td>
                                        <a href="/productsadd/update?id=<%= list[i]._id%>" class="btn btn-warning ">修改</a>
                                        <a href="/productsadd/delete?id=<%= list[i]._id%>" class="btn btn-danger">删除</a>
                                    </td>
                                </tr>
                            <%}%>
                            
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
    <script src="javascripts/jquery.tipsy.js"></script>
